@model Garage_ManagementFinal.Stock

@{
    ViewBag.Title = "Viewadd";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";

}

<h2>Viewadd</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>stock Add</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Quantity")
        <div class="col-md-10">
            @Html.TextBox("quantity", "")

        </div>
    </div>
    <div class="form-group">
        @Html.Label("sell Price")
        <div class="col-md-10">
            @Html.TextBox("price", "", new { htmlAttributes = new { @class = "form-control" } })


        </div>
    </div>
    <div class="form-group">
        @Html.Label("buy Price")
        <div class="col-md-10">
            @Html.TextBox("buy_price", "", new { htmlAttributes = new { @class = "form-control" } })


        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-secondary" />
        </div>
    </div>
</div>

}


<div>
    @Html.ActionLink("Back to List", "Index")
</div>


