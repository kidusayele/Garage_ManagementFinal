@model Garage_ManagementFinal.order_stkitem

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@{

    if (TempData["SuccessMessage"] != null)
    {
        <p class="alert alert-success">
            @TempData["SuccessMessage"]
        </p>
    }

    if (TempData["ErrorMessage"] != null)
    {
        <p class="alert alert-danger">
            @TempData["ErrorMessage"]
        </p>
    }
}

<h2>Order Item</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Quantity</label>
            <div class="col-md-5">
                @Html.EditorFor(model => model.quantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.quantity, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <label>Enrty Form Id</label>

            <div class="col-md-5">
                @Html.DropDownList("Entry_FormId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Entry_FormId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Store Id</label>

            <div class="col-md-5">
                @Html.DropDownList("StockId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StockId, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>date</label>
            <div class="col-md-5">
                @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control", @Value = DateTime.Now.ToString() } })
                @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
